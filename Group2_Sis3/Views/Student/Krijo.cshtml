@model Studenti


<form method="post">
    <div class="border  p-3 mt-4" >
        <div class="row pb-2">
            <h2 class="text-primary">Shto student</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Emri"></label>
            <input asp-for="Emri" class="form-control" />
            <span asp-validation-for="Emri" class="text-warning"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Mbiemri"></label>
            <input asp-for="Mbiemri" class="form-control" />
            <span asp-validation-for="Mbiemri" class="text-warning"></span>
        </div>
        <div class="mb-3">
            <label asp-for="KomunaId"></label>
            <select asp-for="KomunaId" asp-items="@ViewBag.Komunat" class="form-select">
                <option value="0">--Selekto Komunen--</option>
            </select>
            <span asp-validation-for="KomunaId" class="text-warning"></span>
        </div>
        <button type="submit" class="btn btn-success" style="width: 150px;">Shto</button>
        <a class="btn btn-secondary" asp-controller="Student" asp-action="Listo" style="width: 150px;">
            Kthehu 
        </a>
    </div>
</form>
