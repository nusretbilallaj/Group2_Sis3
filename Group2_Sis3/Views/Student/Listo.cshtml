@model List<Studenti>

<div class="container">
    <div class="row mt-1" >
        <div class="col-6 pb-3">
            <h2>Lista e studenteve</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-success" asp-controller="Student" asp-action="Krijo">Shto student</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-danger">
    <thead>
    <tr>
        <th>Id</th>
        <th>Emri</th>
        <th>Mbiemri</th>
    </tr>
    </thead>
    <tbody>
    @foreach (Studenti stud in Model)
    {
        <tr>
            <td>
                    @stud.Id
            </td>
            <td>
                @stud.Emri
            </td>
            <td>
                @stud.Mbiemri
            </td>
        </tr>
    }
   
    </tbody>
</table>